<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_item_press_background_selector" >

    <com.frostwire.android.gui.views.BrowseThumbnailImageButton
        android:id="@+id/view_browse_peer_list_item_file_thumbnail"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:background="@color/app_list_cell_line"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/view_browse_peer_list_item_file_title"
        style="@style/ListItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/view_browse_peer_list_item_file_thumbnail"
        android:text="@string/dummy_title" />

    <TextView
        android:id="@+id/view_browse_peer_list_item_extra_text"
        style="@style/ListItemExt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/view_browse_peer_list_item_file_title"
        android:layout_alignRight="@id/view_browse_peer_list_item_file_title"
        android:layout_below="@id/view_browse_peer_list_item_file_title"
        android:text="@string/dummy_extra" />

    <TextView
        android:id="@+id/view_browse_peer_list_item_file_size"
        style="@style/ListItemSize.browsePeerList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/view_browse_peer_list_item_file_thumbnail"
        android:layout_alignLeft="@id/view_browse_peer_list_item_file_title"
        android:layout_marginBottom="2dip"
        android:text="@string/dummy_size" />

    <ImageView
        android:id="@+id/view_browse_peer_list_item_sd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/view_browse_peer_list_item_file_size"
        android:layout_toRightOf="@id/view_browse_peer_list_item_file_size"
        android:contentDescription="@null"
        android:src="@drawable/browse_peer_sd_icon_inactive" />

</RelativeLayout>
