<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_main"
    android:orientation="vertical"
    tools:context="com.frostwire.android.gui.activities.TransferDetailActivity">

    <include layout="@layout/toolbar_main" />

    <com.frostwire.android.offers.HeaderBanner
            android:id="@+id/transfer_detail_header_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"/>

    <View
        style="@style/divider_line_dark"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <fragment
        android:id="@+id/fragment_transfer_detail"
        android:name="com.frostwire.android.gui.fragments.TransferDetailFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_transfer_detail" />
</LinearLayout>
