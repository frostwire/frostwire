    <fragment
        android:id="@+id/fragment_transfer_detail"
        android:name="com.frostwire.android.gui.fragments.TransferDetailFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_transfer_detail" />
