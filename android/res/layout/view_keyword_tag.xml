<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_margin="4dp"
              android:background="@drawable/blue_light_button_background_selector">
    <TextView
        android:id="@+id/view_keyword_tag_inclusive_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textColor="@color/basic_blue_highlight_dark"
        android:textSize="@dimen/text_large"
        android:padding="5dp"
        />

    <TextView
        android:id="@+id/view_keyword_tag_keyword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fooKeyword"
        android:textColor="@color/white"
        android:textSize="@dimen/text_small"
        />

    <TextView
        android:id="@+id/view_keyword_tag_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(42)"
        android:textColor="@color/basic_blue_highlight_dark"
        android:textSize="@dimen/text_small"
        android:padding="2dp"/>

    <TextView
        android:id="@+id/view_keyword_tag_dismiss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x"
        android:textColor="@color/basic_blue_dark"
        android:textSize="@dimen/text_large"
        android:padding="10dp"/>
</LinearLayout>