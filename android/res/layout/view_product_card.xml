<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/product_card_background"
              android:padding="16dp"
              android:layout_marginTop="10dp">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <TextView android:id="@+id/view_product_card_title_bold_portion"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/dummy_title_bold"
                  style="@style/BuyNoAdsCardTitle.Bold"/>

        <TextView android:id="@+id/view_product_card_title_normal_portion"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/dummy_title"
                  android:layout_marginLeft="5dp"
                  style="@style/BuyNoAdsCardTitle"/>
        <!-- separating filler -->
        <View android:layout_width="0dp"
              android:layout_height="0dp"
              android:layout_weight="1.0"
        />

        <TextView android:id="@+id/view_product_card_hint_button"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/dummy_hint"
                  android:background="@drawable/product_card_hint_button_background"
                  style="@style/BuyNoAdsCardHint"/>
    </LinearLayout>

    <TextView android:id="@+id/view_product_card_price"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/dummy_price"
              style="@style/BuyNoAdsCardPrice"/>

    <TextView android:id="@+id/view_product_card_description"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/dummy_content_description"
              style="@style/BuyNoAdsCardDescription"/>
</LinearLayout>