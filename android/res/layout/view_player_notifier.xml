<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/app_toolbar_background_bottom"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/view_player_notifier_cover"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:background="@drawable/default_artwork" />

    <LinearLayout
        android:id="@+id/view_player_notifier_status_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/view_player_notifier_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:text="@string/dummy_title"
            android:textAllCaps="true"
            android:textColor="@color/app_text_white"
            android:textSize="@dimen/text_extra_micro"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/view_player_notifier_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:text="@string/dummy_title"
            android:textAllCaps="true"
            android:textColor="@color/app_text_light"
            android:textSize="@dimen/text_extra_micro" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/view_player_notifier_previous"
            style="@style/PlayerNotifierIcons"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/btn_playback_previous_bottom" />

        <ImageView
            android:id="@+id/view_player_notifier_play_pause"
            style="@style/PlayerNotifierIcons"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/btn_playback_play_bottom" />

        <ImageView
            android:id="@+id/view_player_notifier_next"
            style="@style/PlayerNotifierIcons"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/btn_playback_next_bottom" />
    </LinearLayout>

</LinearLayout>
