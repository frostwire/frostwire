<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_main"
    android:clickable="true"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/view_transfers_no_seeds_top_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/dummy_title"
        android:textSize="18sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/view_transfers_no_seeds_mid_bold_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="@string/dummy_subtitle"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/view_transfers_no_seeds_bottom_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="@string/dummy_subtitle"
        android:textSize="18sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/view_transfers_no_seeds_button"
        style="@style/BlueButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:minHeight="45dp"
        android:minWidth="150dp"
        android:text="@string/dummy_action" />

</LinearLayout>
