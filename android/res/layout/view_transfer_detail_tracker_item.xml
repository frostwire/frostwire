<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <TextView
        android:id="@+id/view_transfer_detail_tracker_address"
        style="@style/transferDetailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/transfers_detail_page_padding_vertical_small"
        android:paddingEnd="@dimen/transfers_detail_page_padding_horizontal"
        android:paddingLeft="@dimen/transfers_detail_page_padding_horizontal"
        android:paddingRight="@dimen/transfers_detail_page_padding_horizontal"
        android:paddingStart="@dimen/transfers_detail_page_padding_horizontal"
        android:paddingTop="@dimen/transfers_detail_page_padding_vertical_small"
        android:text="@string/transfer_detail_trackers_address_dummy" />

    <!-- TODO for @marcelinkaaa, replace these for ImageButtons with icons representing
         'edit' (a pencil?) and 'remove' (an 'x'? maybe) actions -->
    <ImageButton
        android:id="@+id/view_transfer_detail_tracker_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/menu_update"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"/>
    <ImageButton
        android:id="@+id/view_transfer_detail_tracker_remove_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/action_bar_delete"/>
</LinearLayout>