<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_white"
    android:orientation="vertical">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/transfer_detail_tab_layout"
        style="@style/AppTabLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/basic_blue"
        app:tabMode="scrollable" />

    <!--Extends androidx.viewpager.widget.ViewPager-->
    <com.frostwire.android.gui.views.NonSmoothViewPager
        android:id="@+id/transfer_detail_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
</LinearLayout>
