<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/product_payment_options_background"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingTop="0dp"
    android:paddingRight="12dp"
    android:paddingBottom="12dp">

    <TextView
        android:id="@+id/view_product_payment_options_select_option_below_text"
        style="@style/BuyNoAdsSelectOptionBelowTitle"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:text="@string/select_option_below" />

    <!-- Automatic Renewal Option -->
    <LinearLayout
        android:id="@+id/view_product_payment_options_buy_automatic_renewal_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.3">

            <TextView
                android:id="@+id/view_product_payment_options_buy_automatic_renewal_button"
                style="@style/BuyNoAdsBuyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/product_card_hint_button_background"
                android:text="@string/free_trial_uppercase"
                android:visibility="visible" />

            <ProgressBar
                android:id="@+id/view_product_payment_options_buy_automatic_renewal_progressbar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <TextView
                android:id="@+id/view_product_payment_options_automatic_renewal"
                style="@style/BuyNoAdsCardTitle.Purchase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/automatic_renewal" />

            <TextView
                style="@style/BuyNoAdsCardDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/includes_7_day_free_trial" />

        </LinearLayout>

    </LinearLayout>

    <!-- One Time Purchase Option -->
    <LinearLayout
        android:id="@+id/view_product_payment_options_buy_one_time_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.3">

            <TextView
                android:id="@+id/view_product_payment_options_buy_one_time_button"
                style="@style/BuyNoAdsBuyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/product_card_hint_button_background"
                android:text="@string/free_trial_uppercase" />

            <ProgressBar
                android:id="@+id/view_product_payment_options_buy_one_time_progressbar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <TextView
                style="@style/BuyNoAdsCardTitle.Purchase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/one_time_purchase" />

            <TextView
                style="@style/BuyNoAdsCardDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_trial_period_included" />

        </LinearLayout>

    </LinearLayout>

    <!-- Play Reward Video Option -->
    <!-- Automatic Renewal Option -->
    <LinearLayout
        android:id="@+id/view_product_payment_options_watch_rewarded_video_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.3">

            <TextView
                android:id="@+id/view_product_payment_options_watch_rewarded_video_button"
                style="@style/BuyNoAdsBuyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/product_card_hint_button_background"
                android:text="@string/play_uppercase"
                android:visibility="visible" />

            <ProgressBar
                android:id="@+id/view_product_payment_options_watch_rewarded_video_progressbar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <TextView
                style="@style/BuyNoAdsCardTitle.Purchase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/temporary_ad_removal" />

            <TextView
                android:id="@+id/view_product_payment_options_temporary_ad_removal_description_textview"
                style="@style/BuyNoAdsCardDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/temporary_ad_removal_description" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
