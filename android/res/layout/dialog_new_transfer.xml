<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0dp"
    android:scrollbars="vertical"
    android:background="@color/app_light_background">

    <TextView
        android:id="@+id/dialog_new_transfer_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/dialog_new_transfer_text_text"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/basic_gray_medium"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:weightSum="1.0">

        <Button
            android:id="@+id/dialog_new_transfer_button_no"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:minLines="1"
            android:text="@android:string/no"
            android:background="@color/app_light_background"
            android:textSize="15sp" />

        <Button
            android:id="@+id/dialog_new_transfer_button_yes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:minLines="1"
            android:text="@android:string/yes"
            android:layout_marginLeft="1dp"
            android:background="@color/app_light_background"
            android:textSize="15sp" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/dialog_new_transfer_check_show"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="@string/dialog_new_transfer_check_text"
        android:textColor="@color/frostwire_gray_explanation_text" />

</LinearLayout>