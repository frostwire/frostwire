<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <ImageButton
            android:background="@null"
            android:layout_gravity="center_horizontal|left"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:src="@drawable/ad_cancel"
            android:visibility="invisible"/>

        <TextView
            android:gravity="center"
            android:id="@+id/mopub_squared_banner_advertisement_text"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:layout_width="wrap_content"
            android:text="@string/advertisement"
            android:textColor="@color/app_text_disabled"
            android:visibility="gone"/>

        <ImageButton
            android:background="@null"
            android:id="@+id/mopub_squared_banner_dismiss_mopubview_button"
            android:layout_gravity="center_vertical|right"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:src="@drawable/ad_cancel"
            android:visibility="gone"/>
    </LinearLayout>

    <!-- mopub banner -->
    <com.mopub.mobileads.MoPubView
        android:id="@+id/mopub_squared_banner_mopubview"
        android:layout_height="250dp"
        android:layout_width="match_parent"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/mopub_squared_banner_fallback_imageview"
        android:layout_height="250dp"
        android:layout_width="match_parent"
        android:visibility="gone"/>

    <TextView
        android:gravity="center"
        android:id="@+id/mopub_squared_banner_remove_ads_text_link"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:text="@string/remove_ads"
        android:textColor="@color/basic_blue_highlight_dark"
        android:textSize="@dimen/text_medium"
        android:textStyle="bold"
        android:visibility="gone"/>

</LinearLayout>