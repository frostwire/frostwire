<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp">

    <ImageView
        android:id="@+id/view_promotions_item_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:padding="0sp"
        android:scaleType="matrix" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/black"
        android:gravity="end"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/view_promotions_item_preview_imageview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end|center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@drawable/promo_preview" />

        <ImageView
            android:id="@+id/view_promotions_item_readmore_imageview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end|center_vertical"
            android:background="@color/app_dark_gray"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@drawable/promo_read_more_button" />

        <TextView
            android:id="@+id/view_promotions_item_download_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/basic_blue_highlight"
            android:clickable="false"
            android:gravity="center_vertical"
            android:text="@string/download"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/text_x_medium"
            android:paddingStart="10dp"
            android:paddingEnd="15dp"
            android:drawablePadding="10dp"
            app:drawableStartCompat="@drawable/promo_download_arrow_button" />
    </LinearLayout>
</LinearLayout>
