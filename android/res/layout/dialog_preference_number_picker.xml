<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:scrollbars="vertical"
    android:background="@drawable/default_dialog_background">

    <TextView
        android:id="@+id/dialog_preference_number_title"
        style="@style/DefaultDialogTheme.TitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dummy_title"/>

    <NumberPicker
        android:id="@+id/dialog_preference_number_picker"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="1dp"
        android:paddingTop="1dp"
        android:weightSum="1.0"
        android:background="@color/basic_gray_medium">

        <Button
            android:id="@+id/dialog_preference_number_button_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:clickable="true"
            android:background="@color/app_background_white"/>

        <Button
            android:id="@+id/dialog_preference_number_button_yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_weight="0.5"
            android:clickable="true"
            android:background="@color/app_background_white"/>
    </LinearLayout>
</LinearLayout>
