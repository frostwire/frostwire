<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/default_dialog_background"
    android:orientation="vertical"
    android:scrollbars="vertical">

    <TextView
        android:id="@+id/dialog_preference_seekbar_with_checkbox_title"
        style="@style/DefaultDialogTheme.TitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/dialog_preference_seekbar_with_checkbox_current_value_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:text="@string/dummy_speed"
        android:textAlignment="center"
        android:textColor="@color/app_text_secondary"
        android:textSize="@dimen/text_x_medium" />

    <SeekBar
        android:id="@+id/dialog_preference_seekbar_with_checkbox_seekbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp" />

    <CheckBox
        android:id="@+id/dialog_preference_seekbar_with_checkbox_unlimited_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:text="@string/unlimited" />
</LinearLayout>
