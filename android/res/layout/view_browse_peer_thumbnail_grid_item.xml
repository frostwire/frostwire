<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.frostwire.android.gui.views.BrowseThumbnailImageButton
        android:id="@+id/view_browse_peer_thumbnail_grid_item_browse_thumbnail_image_button"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:background="@color/app_browse_thumbnail_background"
        android:adjustViewBounds="true"
        android:contentDescription="@null" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/view_browse_peer_thumbnail_grid_item_filesize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123.5 KB"
            android:visibility="gone"
            style="@style/GridThumbnailText"
             />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/view_browse_peer_thumbnail_grid_overlay_checkmark_framelayout"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:background="@color/app_grid_selected_background"
        android:clickable="true"
        android:visibility="gone">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/browse_peer_grid_check" />
    </FrameLayout>
</RelativeLayout>
