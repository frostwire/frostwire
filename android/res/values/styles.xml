    <style name="DefaultDialogTheme">
        <item name="android:windowMinWidthMajor">@dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@dimen/dialog_min_width_minor</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:buttonStyle">@style/DefaultDialogTheme.Buttons</item>
    </style>
    <!-- v21 -->
    <style name="DefaultDialogTheme.TitleBar">
        <item name="android:background">@drawable/default_dialog_title_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_x_large</item>
        <item name="android:padding">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DefaultDialogTheme.MainText">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/app_text_primary</item>
    </style>

    <style name="DefaultDialogTheme.SmallText">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/app_text_secondary</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="DefaultDialogTheme.LongText">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="DefaultDialogTheme.Buttons">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:minLines">1</item>
    </style>
    <!--v21-->
    <style name="DefaultDialogTheme.SmallTextMedium">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/app_text_secondary</item>
        <item name="android:padding">3dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="ToolbarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@android:style/TextAppearance.Medium</item>
        <item name="subtitleTextAppearance">@android:style/TextAppearance.Small</item>
        <item name="titleMargin">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <!-- OGURY -->
    <style name="Presage.Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- Music Player View Pager Title -->
    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/tab_background_color_selector</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/app_text_white</item>
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="tabIndicatorHeight">0dp</item>
    </style>
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/app_text_white</item>
        <item name="textAllCaps">true</item>
    </style>

    <!-- Search Keyword Filter -->
    <style name="keywordFilterSectionTitle">
        <item name="android:textSize">@dimen/text_x_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/app_text_secondary</item>
        <item name="android:padding">15dp</item>
    </style>
</resources>
