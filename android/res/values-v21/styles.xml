<resources>
    <style name="RichNotificationTitle">
        <item name="android:textSize">@dimen/text_x_medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/app_text_primary</item>
    </style>


    <style name="TransfersList.Item.Title">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/app_text_primary</item>
    </style>

    <!-- Default Dialog Styles -->
    <style name="DefaultDialogTheme.TitleBar">
        <item name="android:background">@drawable/default_dialog_title_background</item>
        <item name="android:textColor">@color/app_text_white</item>
        <item name="android:textSize">@dimen/text_x_large</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="DefaultDialogTheme.SmallTextMedium">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/app_text_primary</item>
        <item name="android:padding">3dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="DefaultDialogTheme.Buttons" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:text">@color/app_text_highlight</item>
        <item name="android:textColor">@color/app_text_highlight</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:minLines">1</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="MediumText">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="PreferencesBlueButton">
        <item name="android:background">@drawable/blue_light_button_background_selector</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">42dp</item>
        <item name="android:paddingRight">42dp</item>
        <item name="android:textSize">@dimen/text_x_medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">2dp</item>
    </style>

</resources>
