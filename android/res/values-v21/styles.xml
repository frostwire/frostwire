<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RichNotificationTitle">
        <item name="android:textSize">@dimen/text_x_medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/app_text_primary</item>
    </style>
    <style name="RichNotificationButtonText">
        <item name="android:textSize">@dimen/text_x_medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/app_text_primary</item>
    </style>

    <style name="TransfersList.Item.Title">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/app_text_primary</item>
    </style>

    <style name="DefaultDialogTheme.TitleBar">
        <item name="android:background">@drawable/default_dialog_title_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_x_large</item>
        <item name="android:padding">15dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="DefaultDialogTheme.SmallTextMedium">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/app_text_secondary</item>
        <item name="android:padding">3dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="MediumText">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="PreferencesBlueButton">
        <item name="android:background">@drawable/blue_light_button_background_selector</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">42dp</item>
        <item name="android:paddingRight">42dp</item>
        <item name="android:textSize">@dimen/text_x_medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">2dp</item>
    </style>

</resources>
