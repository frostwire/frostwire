<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape android:shape="oval">
            <solid android:color="@color/basic_white" />
            <size
                android:width="14dp"
                android:height="14dp" />
        </shape>
    </item>

    <item
        android:left="3dp"
        android:right="3dp">
        <shape android:shape="line">
            <stroke
                android:width="2dp"
                android:color="@color/tip_tag_blue" />
        </shape>
    </item>

    <item
        android:left="3dp"
        android:right="3dp">
        <rotate
            android:fromDegrees="90"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="-90">
            <shape android:shape="line">
                <stroke
                    android:width="2dp"
                    android:color="@color/tip_tag_blue" />
            </shape>
        </rotate>
    </item>
</layer-list>
